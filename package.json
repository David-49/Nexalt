{
  "name": "nexalt",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write .",
    "test:format": "prettier --check .",
    "test:lint": "next lint",
    "test:ts": "yarn tsc --noEmit --skipLibCheck",
    "test:all": "yarn test:format && yarn test:lint && yarn test:ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^12.1.2",
    "pg": "^8.7.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.14",
    "@types/pg": "^8.6.5",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.1",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "**/*.{js, jsx, ts,tsx}": [
      "yarn next lint",
      "yarn prettier --write"
    ]
  }
}
